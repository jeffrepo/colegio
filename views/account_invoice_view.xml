<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="colegio_invoice_form" model="ir.ui.view">
            <field name="name">colegio.account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="date_invoice" position="attributes">
                    <attribute name="string">Fecha de recibo</attribute>
                </field>
                <field name="date_due" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="cash_rounding_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="payment_term_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <page name="other_info" position="after">
                    <page name="colegio" string="Colegio">
                      <group>
                        <field name="grado_id"/>
                        <field name="seccion_id"/>
                        <field name="ciclo_id"/>
                        <field name="jornada_id"/>
                        <field name="metodo_pago_id"/>
                      </group>
                    </page>
                </page>
                <!-- <field name="name" position="after">
                    <field name="metodo_pago_id"/>
                </field> -->
            </field>
        </record>

        <record id="colegio_invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="date_due" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>


    </data>
</odoo>
